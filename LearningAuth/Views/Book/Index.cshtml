@*
@{ 
    Layout = null;
}
*@
<div class="grid-container">
    <div class="catalog-flex">
        @for(var i=1; i<16; i++)
            {
                <div class="book-flex">
                    <div class="picture-div">
                        <img class="book-image" src="https://m.media-amazon.com/images/G/01/prime/primeinsider2/pageturners/trending/harry_potter._CB472533465_.jpg" alt="book" width="200" height="200"/>
                    </div>
                    <div class="write-up">
                        <h5 class="book-author">Harry Potter</h5>
                        <p class="book-title">J.K Rowling</p>
                        <ul>
                            @for (var j = 1; j < 6; j++)
                            {
                                <li><i class="fas fa-star"></i></li>
                            }

                        </ul>
                    </div>
                </div> 
            }
    </div>
</div>
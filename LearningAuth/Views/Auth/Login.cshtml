<head>
    <link href="../bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap" rel="stylesheet">
    <link href="~/css/book.css" rel="stylesheet" />
    <style>
        * {
            font-family: 'Poppins', sans-serif;
        }
    </style>

</head>

@{ 
    Layout = null;
}

@model LoginViewModel

<body>
    <div class="auth-card">
        <h1 class="text-info offset-3" style="margin-top: 5rem">Login</h1>
        <form asp-controller="Auth" asp-action="Login" method="post" asp-route-redirect="@ViewData["ReturnUrl"]" role="form" class="mt-1">
            <div class="offset-3 text-danger"  style="list-style: none" asp-validation-summary="ModelOnly"></div>

            <div class="mt-3">
                <label asp-for="Email" class="col-md-2 offset-3"></label>
                <div class="col-md-6 offset-3">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>




            <div class="mt-3">
                <label asp-for="Password" class="col-md-2 offset-3"></label>
                <div class="col-md-6 offset-3">
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>


            <div class="mt-3">
                <label asp-for="RememberMe" class="col-md-2 offset-3"></label>
                <div class="col-md-6 offset-3">
                    <input asp-for="RememberMe" type="checkbox" />
                </div>
            </div>



            <div class="mt-3">
                <div class="col-md-4 offset-3">
                    <button type="submit" class="btn btn-success">Register</button>
                </div>
            </div>

            <ul class=" offset-3 col-md-6 mt-3" style="list-style:none;">
                <li class="text-info"><a style="text-decoration:none" asp-action="Register" asp-controller="Auth">Register a new user</a></li>
                <li class="text-info"><a style="text-decoration:none" asp-action="ForgotPassword" asp-controller="Auth">Forgot Password</a></li>
            </ul>
        </form>
    </div>
</body>


@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}